@page "/bindprop"

<h2 class="bg-light border p-2">
    First Room
</h2>
Room : @Room.RoomName
<br />
Price : @Room.Price
<br />

<input type="number" @bind-value="@Room.Price" @bind-value:event="oninput" />
<br />
<input type="checkbox" @bind-value="@Room.IsActive" @bind-value:event="oninput" /> Is Active
<br />
@if (Room.IsActive)
{
    <p>This room is Active</p>

}
else
{

    <p>This room is Inactive</p>

}
<select @bind="SelectedRooms">
    @foreach (var prop in Room.RoomProps)
    {
        <option value="@prop.Name">@prop.Name</option>
    }

</select>
<br />
<h2 style="color:aqua">Room List</h2>
<br />
<table class="table table-dark">

    @foreach (var room in Rooms)
    {
        <tr>
            <td>
                <input @bind-value="@room.RoomName" @bind-value:event="oninput" />
            </td>
            <td>
                <input @bind-value="@room.Price" @bind-value:event="oninput" />
            </td>
            @foreach (var prop1 in room.RoomProps)
            {
                <td>
                    <span> @prop1.Name - @prop1.Value </span>
                </td>
            }
        </tr>


    }
</table>

@foreach (var room1 in Rooms)
{
<span>@room1.RoomName 's Price is @room1.Price</span>
<br/>
}





